<div class="mt-4">
  <h3>Đăng khoá học</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Tên khoá học</label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả</label>
    <textarea
        id="description"
        name="description"
        class="form-control"
      ></textarea>
    </div>
    <div class="form-group">
      <label for="videoID">Video ID</label>
      <input
        type="text"
        id="videoID"
        name="videoID"
        class="form-control"
      />
      <div class="form-group">
      <label for="level">Level</label>
      <input
        type="text"
        id="level"
        name="level"
        class="form-control"
      />
    </div>
    <button type="submit" class="btn btn-primary">Thêm khoá học</button>
  </form>
</div>